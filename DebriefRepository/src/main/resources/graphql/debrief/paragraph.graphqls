type Paragraph implements ContentItem & OrderItem {
    id: ID!
    index: Int!
    name: String!
    comments: [Comment!]!
}

type Comment implements OrderItem{
    id: ID!
    index: Int!
    bullet : String!
    paragraph: Paragraph!
}

input CommentInput {
    id: ID
    index: Int
    bullet: String
    paragraph: ID
}

input ParagraphInput {
    id: ID
    index: Int
    name: String
    comments: [CommentInput!]
}

